<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        style="@style/st_14_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pad_11"
        android:layout_marginBottom="@dimen/pad_12"
        android:layout_toLeftOf="@+id/total"
        android:layout_marginRight="@dimen/pad_5"
        android:lineSpacingExtra="4sp"/>

    <ImageView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/delete" />

    <TextView
        android:id="@+id/sht"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pad_10"
        android:layout_toLeftOf="@+id/delete"
        android:lineSpacingExtra="2sp"
        style="@style/st_16_text"
        android:fontFamily="sans-serif-medium"
        android:text="@string/sht" />

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pad_10"
        android:layout_marginRight="@dimen/pad_5"
        android:layout_toLeftOf="@+id/sht"
        android:lineSpacingExtra="2sp"
        style="@style/st_16_text"
        android:fontFamily="sans-serif-medium"
        android:text="3" />

</RelativeLayout>