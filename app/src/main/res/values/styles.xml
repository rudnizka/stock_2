<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="styleEditText">
        <item name="colorAccent">@color/primary_light</item>
        <item name="colorControlNormal">@color/gray_b</item>
        <item name="colorControlActivated">@color/primary_light</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme.NoTitleBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/splash_logo</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="st_12_text_50">
        <item name="android:textColor">@color/text_50</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="st_12_blue">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="st_14_black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="st_14_text">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="st_14_text_50">
        <item name="android:textColor">@color/text_50</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="st_14_text_70">
        <item name="android:textColor">@color/text_70</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="st_14_blue">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="st_14_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="st_16_text">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="st_16_blue">
        <item name="android:textColor">@color/primary_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="st_18_text">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="st_18_text_50">
        <item name="android:textColor">@color/text_50</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="st_title">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="st_sub_title">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="st_text">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="st_error_title">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="st_error_text">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="st_button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:colorPressedHighlight">@color/primary</item>
    </style>

</resources>
